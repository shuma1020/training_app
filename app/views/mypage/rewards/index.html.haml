%h1 Rewards
%table
  %thead
    %tr
      %th Title
      %th Description
      %th Price
      %th Product
      %th{:colspan => "3"}
  %tbody
    - @rewards.each do |reward|
      %tr
        %td= reward.title
        %td= reward.description
        %td= reward.price
        %td= reward.product_id
        %td= reward.user_id
        %td= link_to 'Show', mypage_reward_path(reward)
        %td= link_to 'Edit', edit_mypage_reward_path(reward)
        %td= link_to 'Destroy', mypage_reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Reward', new_mypage_reward_path
