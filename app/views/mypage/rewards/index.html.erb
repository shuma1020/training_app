<div class="container">

<h1>Rewards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rewards.each do |reward| %>
      <tr>
        <td><%= reward.title %></td>
        <td><%= reward.description %></td>
        <td><%= reward.price %></td>
        <td><%= reward.product_id %></td>
        <td><%= reward.user_id %></td>
        <td><%= link_to 'Show', mypage_reward_path(reward) %></td>
        <td><%= link_to 'Edit', edit_mypage_reward_path(reward) %></td>
        <td><%= link_to 'Destroy', mypage_reward_path(reward), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reward', new_mypage_reward_path %>
</div>