%p.main-title
  = @product.title
.row
  .col-sm-7
    - if @product.image?
      .thumb
        = image_tag @product.image.url,class:"img-thumbnail ", alt:"Responsive image"
  .col-sm-3
    %strong 目標金額
    %p.show-title
      = @product.price
    %strong 概要
    %p.show-title
      = @product.description
    %strong 状態
    %p.show-title
      = @product.status
    %strong メッセージ
    %p.show-title
      = @product.message
  - if current_user.liked_for?(@product)
    = link_to "★いいね", [:like, @product], method: :patch
  = link_to 'Back', products_path
.patron_message
  - if @patron.nil?
    - if @product.owner?(current_user)
      %p Your Product
    - else
      = link_to "パトロンになる", new_product_patron_path(@product), class:"btn btn-secondary"
  - else
    %p
      = @patron.created_at.strftime("%m月%d日")
      からパトロンです(#{@patron.donation}円)
.reward
  %h1 リターンを選ぶ
  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Price
        %th Product
        %th{:colspan => "3"}
    %tbody
      - @rewards.each do |reward|
        %tr
          - if @patron && reward == @patron.reward
            %td{:style => "color:red"}= reward.title
          - else
            %td= reward.title
          %td= reward.description
          %td= reward.price
          %td= reward.product_id
          %td= reward.user_id
          %td= link_to 'Show', mypage_product_reward_path(@product, reward)
          %td= link_to 'Edit', edit_mypage_product_reward_path(@product, reward)
          %td= link_to 'Destroy', mypage_product_reward_path(@product, reward), method: :delete, data: { confirm: 'Are you sure?' }
