<div class="container">
<% if user_signed_in? %> 
<%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!-- ログアウトをする -->

<p id="notice"><%= notice %></p>

<h1 class="product_title">Products</h1>

<table class="table table-borderless">
  <thead class="thead-dark">
    <tr>
      <th scope="col">参照する</th>
      <th scope="col">編集する</th>
      <th scope="col">削除する</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Status</th>
      <th scope="col">Message</th>
      <th scope="col">Rewards</th>
      <th scope="col" colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.status %></td>
        <td><%= product.message %></td>
        <% product.rewards.each do |reward| %>
        <td><%= reward.title%></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</div>
<% else %>
<h2> 現在ログインしていません </h2>
  <%= link_to "ログイン",  login_path, class: 'post' %> <!-- ログイン画面に移行する -->
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %> <!-- 新規登録画面に移行する -->
<% end %>